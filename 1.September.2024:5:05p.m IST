class Solution {
  public:
    int maxPathSum(vector<int> &arr1, vector<int> &arr2) {
        // Code here
         int i=0;
        int j=0;
        int ans=0;
        int sum1=0;
        int sum2=0;
        while(i<arr1.size() && j<arr2.size()){
            if(arr1[i]>arr2[j]){
                sum2+=arr2[j];
                j++;
            }else if(arr1[i]<arr2[j]){
                sum1+=arr1[i];
                i++;
            }else if(arr1[i]==arr2[j]){
                ans+=max(sum1,sum2)+arr1[i];
                sum1=0;
                sum2=0;
                i++;
                j++;
            }
        }
        // ans+=max(sum1,sum2);
        while(i<arr1.size()){
            sum1+=arr1[i];
            i++;
        }
        while(j<arr2.size()){
            sum2+=arr2[j];
            j++;
        }
        ans+=max(sum1,sum2);
        return ans;
    }
};
